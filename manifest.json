{
  "name": "Center Schoology Icons",
  "description": "Centers menu icons in the schoology resource submition modal.",
  "version": "0.1.0",
  "manifest_version": 3,

  "content_scripts": [
    {
      "css": ["./schoology/schoology-style.css"],
      "matches": ["https://*.schoology.com/assignment/*"],
      "use_dynamic_url": true
    }
  ],

  "action": {
    "default_title": "Center Schoology Icons",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}
